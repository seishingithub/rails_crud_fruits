<%= form_for @fruit do |f| %>
  <p>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :color %>
    <%= f.text_field :color %>
  </p>
  <p>
    <%= f.submit 'Create fruit' %>
  </p>
<% end %>

<% @fruits.each do |fruit| %>
  <ul>
    <li>
      <%= fruit.name %>, <%= fruit.color %>
    </li>
  </ul>
<% end %>